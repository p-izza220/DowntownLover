<div class="container">
	<div class="row">
		<div class="col-md-12 text-center">
			<ul class="nav nav-pills">
			  <li role="presentation"><a href="/">Home</a></li>
			  <li role="presentation"><a href="/gallery">Shop</a></li>
			  <li role="presentation"><a href="/about">About</a></li>
			  <li role="presentation" class="active"><a href="/contact">Contact</a></li>
		  </ul>
		</div>
		<div class="col-md-12 text-center">
			<p id="txt"></p>
		</div>
		<div class="col-md-12 text-center">
		<h1>Contact Us</h1>
		<br/>
		<br/>
		<br/>
	</div>
		<div class="col-md-12 text-center">
		  <form method="POST" action="/contact">
		    <label for="name">Name</label>
		    <br>
		    <input type="text" name="name" placeholder="Mike" />
		    <br>
		    <label for="email">E-mail</label>
		    <br>
		    <input <%= "class=\"error\" " if @error && @error.index('email') %> type="text" name="email" placeholder="mike@email.com" />
		    <br>
		    <span <%= 'class="error" ' if @error %> id="console"><%= @msg %></span>
		    <br>
		  	<textarea maxlength="255" cols="50" rows="10" name="message"></textarea>
		  	<br>
		  	<strong><span id="message-remaining"></span></strong>
		  	<br>
		  	<input type="submit" />
		  </form>
		</div>
	</div>
